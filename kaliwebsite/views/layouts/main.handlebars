<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!--use info.json for store-name for title-->
        <title>{{#if store-name}}{{store-name}}{{/if}} </title>

        <!--owl, bootstrap, project css files-->
        <link rel="stylesheet" href="/js/owl/assets/owl.carousel.min.css">
        <link rel="stylesheet" href="/js/owl/assets/owl.theme.default.min.css">
        <link rel="stylesheet" href="/css/bootstrap.css">
        <link rel="stylesheet" href="/styles.css">
    </head>

    <body class="accent-color-lightest bebasNeue">
        <div class="container-fluid">
            {{>navbar}}
        </div>
        <div class="background-color container-lg">
            {{{body}}}
        </div>
        <!--jQuery should always be the first script-->
        <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
        <script src="/js/bootstrap.bundle.js"></script>
        <script src="/js/owl/owl.carousel.min.js"></script>

        <script>
            $(function(){
                //slideshow
                $('.owl-slideshow').owlCarousel({
                    loop:true,
                    margin:0,
                    nav:true,
                    responsive:{
                        0:{
                            items:1
                        },
                        600:{
                            items:1
                        },
                        1000:{
                            items:1
                        }
                    }
                }); 
                //packages
                $('.owl-packages').owlCarousel({
                    loop:true,
                    margin:10,
                    nav:true,
                    responsive:{
                        0:{
                            items:1
                        },
                        600:{
                            items:2
                        },
                        1000:{
                            items:3
                        }
                    }
                }); 
            });
        </script>
    </body>
</html>