<!--header-->
<div class="section-divider" id="about"></div>

<!--slideshow : items-->
{{#if slideshow}}
  <div class="owl-slideshow owl-carousel owl-theme">
    {{#each slideshow}}
        <div class="media-container">
            {{#if this.cover}}
                <a href="/item/{{this.id}}" class="gallery-img">
                {{#isVideo cover}}
                    <video controls>
                        <source src="{{cover}}" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                    {{else}}
                        <img src="{{cover}}" alt="{{title}}" class="img-thumbnail">
                {{/isVideo}}
                </a>
            {{/if}}
        </div>
    {{/each}}      
  </div>
{{/if}}

<!--carousel slider : items-->
{{#if items}}
    <div class="section-divider" id="services"></div>
    <h2 class="section-header dawningOfANewDay" id="packages">Slider</h2>
    <!--slider-->
    <div class="owl-theme owl-carousel owl-packages">
        {{#each items}}
            <div class="media-container">
                {{#if this.cover}}
                    <a href="/item/{{this.id}}" class="gallery-img">
                    {{#isVideo cover}}
                        <video controls>
                            <source src="{{cover}}" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                        {{else}}
                            <img src="{{cover}}" alt="{{title}}" class="img-thumbnail">
                    {{/isVideo}}
                    </a>
                {{/if}}
            </div>
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
            </div>
            <ul class="list-group list-group-flush nanumMyeongjo-regular">
                <li class="list-group-item">{{this.date}}</li>
            </ul>
        {{/each}}
    </div>
{{/if}}

