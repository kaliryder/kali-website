<div class="container-fluid">
    {{>navbar}}
</div>

<!--header-->
<div class="section-divider" id="about"></div>

<!--item gallery : featured items-->
<div class="gallery-container">
  <div class="section-divider" id="gallery"></div>
  <h2 class="section-header dawningOfANewDay">Item Gallery</h2>
  <div class="row">
    <!--physical art item-->
    {{#if physicalArtRandomItem}}
      <div class="col-3">
        {{#each physicalArtRandomItem}}
            <div class="col-12 col-md-6 col-lg-3 mb-4">
                <div class="media-container">
                    {{#if cover}}
                        <a href="/item/{{category}}/{{subcategory}}/{{group}}/{{id}}" class="gallery-img">
                        {{#isVideo cover}}
                            <video controls>
                                <source src="{{cover}}" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                            {{else}}
                                <img src="{{cover}}" alt="{{title}}" class="img-thumbnail img-fluid">
                        {{/isVideo}}
                        </a>
                    {{/if}}
                </div>
            </div>
        {{/each}}
      </div>
    {{/if}}
    <!--clothes item-->
    {{#if clothesRandomItem}}
      <div class="col-3">
        {{#each clothesRandomItem}}
            <div class="col-12 col-md-6 col-lg-3 mb-4">
