                                <source src="{{cover}}" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                            {{else}}
                                <img src="{{cover}}" alt="{{title}}" class="img-thumbnail img-fluid">
                        {{/isVideo}}
                        </a>
                    {{/if}}
                </div>
            </div>
        {{/each}}
      </div>
    {{/if}}
  </div>
</div>

