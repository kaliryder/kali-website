<!--header-->
<div class="section-divider" id="about"></div>
<h1 class="color3 dawningOfANewDay">{{category}}</h1>

<!--image gallery : items-->
{{#if categoryData.items}}
<div class="section-divider" id="gallery"></div>
<div class="row">
    {{#each categoryData.items}}
        <div class="col-3">
            <!--gallery item-->
            <div class="col-12 col-md-6 col-lg-3 mb-4">
                <div class="media-container">
                    {{#if this.cover}}
                        <a href="/item/{{this.category}}/{{this.subcategory}}/{{this.group}}/{{this.id}}" class="gallery-img">
                            {{#isVideo this.cover}}
                                <video controls>
                                    <source src="{{this.cover}}" type="video/mp4">
                                    Your browser does not support the video tag.
                                </video>
                                {{else}}
                                    <img src="{{this.cover}}" alt="{{this.title}}" class="img-thumbnail">
                            {{/isVideo}}
                        </a>
                    {{/if}}
                </div>
            </div>
            <h5>{{this.title}}</h5>
            <h7>{{this.date}}</h7>
        </div>
  {{/each}}
</div>
{{/if}}

<!--footer-->
<footer>
